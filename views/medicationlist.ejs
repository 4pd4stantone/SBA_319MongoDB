<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %>
    <main>
      <div style="text-align: center; margin-top: 20px">
        <h1 id="main-title">Medication List</h1>
      </div>
      <div>
        <table class="nurse-table">
          <% result.forEach(m => { %>
          <tbody class="nurse-body">
            <tr>
              <th colspan="2" class="nurse-header"><%= m.medication_name %></th>
            </tr>
            <tr>
              <td class="label">Route</td>
              <td class="value"><%= m.route %>
              </td>
            </tr>
            <tr>
              <td class="label">Purpose</td>
              <td class="value"><%= m.purpose %></td>
            </tr>
            <tr>
              <td class="label">Side Effects</td>
              <td class="value"><%= m.side_effects %></td>
            </tr>
            <tr>
              <td class="label">Contraindications</td>
              <td class="value">
                <%= m.contraindications %>
              </td>
            </tr>
            <tr>
              <td class="label">Drug Interactions</td>
              <td class="value"><%= m.drug_interactions %>
              </td>
            </tr>
             <tr>
              <td class="label">Nursing Education</td>
              <td class="value"><%= m.nursing_education %>
              </td>
            </tr>
          </tbody>
          <% }) %>
        </table>
      </div>
    </main>
    <footer style="position: relative; bottom: -30px; right: auto; left: auto">
      <div class="nav-bar">
        <a href="/" style="width: 30px"
          ><img
            src="/BrightPath_logo.png"
            alt="Bright Path Logo & Name"
            style="
              width: 30px;
              margin-top: -5px;
              box-shadow: #204344 1px 1px;
              flex-grow: 0;
            "
          /><span style="color: whitesmoke; margin-top: 2px"
            >Copyright &copy BrightPath 1980</span
          ></a
        >
      </div>
    </footer>
  </body>
</html>